<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spNameLecture" android:layout_gravity="left|center_vertical"/>
    <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spViewLecture" android:layout_gravity="left|center_vertical"/>
    <TextView
android:layout_width="fill_parent"
android:layout_height="29dp"
android:clickable="true"
android:onClick="onclickData"
android:text="   Дата:"
android:id="@+id/tvDate" android:layout_gravity="left|center_vertical"/>

<TextView
android:clickable="true"
android:onClick="onclick"
android:layout_width="fill_parent"
android:layout_height="29dp"
android:text="   Время: "
android:id="@+id/tvTime" android:layout_gravity="left|center_vertical"/>

 <ListView
            android:id="@+id/lvAttendance"
            android:layout_width="match_parent"
            android:layout_height="153dp">
</ListView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="Отмена"
                android:id="@+id/btnBack"
                />
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Сохранить"
                android:id="@+id/btnSaveLecture" android:layout_gravity="center_horizontal|top"/>
    </LinearLayout>
</LinearLayout>